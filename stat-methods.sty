\newcommand{\example}[1]{%
\begin{mdframed}\small
\textbf{Пример.~}#1\par
\end{mdframed}%
}

\newcommand{\exercise}[1]{%
\begin{mdframed}\small
\textbf{Упражнение.~}#1\par
\end{mdframed}%
}

\newcommand{\note}[1]{%
\begin{mdframed}\small
\textbf{Замечание.~}#1\par
\end{mdframed}%
}

\newenvironment{longnote}{%
\begin{mdframed}
}{%
\end{mdframed}%
}

\newcommand{\disclaimer}[1]{
    \noindent\begin{mdframed}[linecolor=red]
            #1
    \end{mdframed}
}

